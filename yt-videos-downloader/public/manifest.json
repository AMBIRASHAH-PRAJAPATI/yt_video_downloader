{
  "manifest_version": 3,
  "name": "YouTube Downloader",
  "version": "1.0",
  "description": "Download YouTube videos with a click!",
  "permissions": [
    "downloads",
    "storage",
    "activeTab",
    "scripting",
    "http://localhost:4000/*"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
  {
    "matches": ["*://*.youtube.com/*"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }
]
}